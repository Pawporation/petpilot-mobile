<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pawporation.petpilot.ui.profile.ProfileFragment">

    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/TextViewID"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Prosper"
        android:layout_marginTop="250dp"
        android:layout_marginStart="28dp"
        android:gravity="center"
        android:textColor="@color/quantum_black_100"
        android:background="@drawable/circle"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="350dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/badge1"
            android:layout_marginStart="20dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/attractions_24"
            android:background="@drawable/hexagon" />

        <ImageView
            android:id="@+id/badge2"
            android:layout_marginStart="38dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/beach_24"
            android:background="@drawable/hexagon" />

        <ImageView
            android:id="@+id/badge3"
            android:layout_marginStart="38dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/bakery_24"
            android:background="@drawable/hexagon" />


        <ImageView
            android:id="@+id/badge4"
            android:layout_marginStart="38dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/cake_24"
            android:background="@drawable/hexagon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="382dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/badge5"
            android:layout_marginStart="72dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/celebration_24"
            android:background="@drawable/hexagon" />

        <ImageView
            android:id="@+id/badge6"
            android:layout_marginStart="38dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/cottage_24"
            android:background="@drawable/hexagon" />

        <ImageView
            android:id="@+id/badge7"
            android:layout_marginStart="38dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/run_24"
            android:background="@drawable/hexagon" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profileView_timeline_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="450dp"
        android:layout_marginBottom="100dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>